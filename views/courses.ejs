<% include partials/header %>
	<div class="course-contents">
		<!-- <h1>This is the course page</!--> 
			<div style="border: 1px solid #ddd; background-color:rgb(3, 151, 151); border-radius: 4px; margin-top: 20px; padding: 5px; width: 800px; height: 200px; box-shadow: 5px 5px 5px black; text-align: center; margin-left: 20%">
			<p style="font-size: 50px; color: white; text-align: center">Discover your perfect program in our schools</p>
		</div>
		<div class="row" style="">
			<% courses.forEach( (course) => { %>
				<div class="col- course">
					<div id="container" style="text-align: center; width: 80%; font-family: Verdana, Geneva, Tahoma, sans-serif; font-weight: bolder; font-size: 20px" >
						<div id="one" style="border: 1px solid #ddd; border-radius: 4px; padding: 5px; width:100%; height: 350px; box-shadow: 5px 5px 5px black; text-align: center; margin: 20px">
							<a href="/courses/<%= course._id %>" class="link" style="text-decoration: none; color: black;">
							<p style="float: center; margin-top: 10px; color: rgb(10, 10, 109); font-size: 30px"><img src="<%= course.iconPath %>" width="50px" height="50px"/></p><hr>
							<p style="color:rgb(3, 151, 151); font-size: 30px"><%= course.title %></p> 
							<p style="margin-top: 0px; padding-top: 10px" ><%= course.description %></p>
							<p style="margin-top: 0px; padding-top: 5px" >Price: $<%= course.price %></p>
							<a href="/courses/:id/checkout">Buy Course</a>
							</a>
						</div>
					</div>
				</div>
			<% }) %>
		</div>
	</div><br><br><br>

	<% include partials/footer %>